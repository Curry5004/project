package sec07.exam02_data_read_write;

import java.io.IOException;
import java.io.InputStream;
import java.io.OutputStream;
import java.net.InetSocketAddress;
import java.net.Socket;

public class ClientExample {

	public static void main(String[] args) {
		Socket socket = null;
		//서버와 연결하기 위해 클라이언트쪽에서 socket을 생성한다
		
//		socket = new Socket();
		System.out.println("[연결 요청]");
		try {
			socket = new Socket("localhost", 5001);
			//이렇게 socket 생성자를 통해서 해당 ip와 포트 넘버를 입력하는 식으로 들어갈 수도 있고
//			socket.connect(new InetSocketAddress("localhost", 5001));
			//InetSocketAddress를 통하여 접속하는 방법도 있다.
			System.out.println("연결성공");
			
			byte[] bytes = null;
			String message = null;
			OutputStream os = socket.getOutputStream();
			message = "Hello Server";
			bytes = message.getBytes("UTF-8");
			os.write(bytes);
			os.flush();
			System.out.println("[클라이언트에서 데이터 보내기 성공]");
			
			InputStream is = socket.getInputStream();
			bytes = new byte[100];
			int readByteCount = is.read(bytes);
			message = new String(bytes, 0, readByteCount, "UTF-8");
			System.out.println("[데이터받기 성공]"+message);
			
			os.close();
			is.close();
			socket.close();
			
			
							
		} catch (IOException e) {}
		
		
		if(!socket.isClosed()){
			try {
				socket.close();
			}catch(IOException e) {}
		}
	}
}