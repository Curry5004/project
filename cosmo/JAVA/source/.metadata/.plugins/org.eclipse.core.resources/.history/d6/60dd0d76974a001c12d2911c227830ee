package verify.exam11;

import java.io.File;
import java.io.FileInputStream;
import java.io.OutputStream;
import java.net.Socket;


public class ClientExample {
	public static void main(String[] args) throws Exception {		
		Socket socket = new Socket("localhost", 5001);
		OutputStream os = socket.getOutputStream();	
		
		//이거 예제풀때 주소 꼬오오옹옥 확인하기!
		String filePath = "C:/JavaProgramming/source/chap18/src/sec04/exam03_fileoutputstream/house.jpg";
		File file = new File(filePath);
		
		//파일 이름이 저장된 길이 100바이트를 먼저 보냅니다
		String fileName = file.getName();
		byte[] fileNameByte = new byte[100];
		fileNameByte = fileName.getBytes();
		os.write(fileNameByte);
		
//		FileInputStream fis = new FileInputStream(filePath);
//		while((readByteNo=fis.read())!=-1) {
//			fileByteNew+=fis.read(fileByte);
//		}
		
		System.out.println("[파일 보내기 시작] " + fileName);
		
		FileInputStream fis = new FileInputStream(filePath);
		int readByteNo =0;
		while((readByteNo=fis.read())!=-1) {
			os.write(fileNameByte,0,readByteNo);
		}
		os.write(readByteNo);
		os.flush();
		System.out.println("[파일 보내기 완료]");		
		
		fis.close();
		os.close();
		socket.close();
	}
}
