package Customer;

public class Customer {
	private String name;
	private int count;
	private int balance;
	public Grade grade;
	
	public Customer(String name, int count, int balance) {
		this.name=name;
		this.count=count;
		this.balance=balance;
		runGrade(count,balance);
	}
	
	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getCount() {
		return count;
	}

	public void setCount(int count) {
		this.count = count;
	}

	public int getBalance() {
		return balance;
	}

	public void setBalance(int balance) {
		this.balance = balance;
	}

	public Grade getGrade() {
		return grade;
	}

	public void setGrade(Grade grade) {
		this.grade = grade;
	}
	

}
